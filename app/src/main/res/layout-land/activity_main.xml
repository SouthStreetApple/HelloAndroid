<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    >


    <ImageView
        android:id="@+id/mainImage"
        android:layout_marginTop="@dimen/mainImageTopMargin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mainImageHeightHor"
        android:src="@drawable/udacity"
        android:scaleType="centerCrop"
        />


    <TextView
        android:id="@+id/companyName"
        android:layout_marginTop="@dimen/itemsMargin"
        android:layout_marginLeft="@dimen/itemsMargin"
        android:layout_below="@id/mainImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textSize"
        android:textStyle="bold"
        android:textColor="@color/textColor"
        android:text="@string/company_name"
        />
    <TextView
        android:id="@+id/phone"
        android:layout_marginTop="@dimen/itemsMarginTop"
        android:layout_marginLeft="@dimen/itemsMargin"
        android:layout_below="@id/companyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textSize"
        android:textColor="@color/textColor"
        android:textColorLink="@color/textColor"
        android:text="@string/phone"
        android:autoLink="phone"

        />
    <TextView
        android:id="@+id/web"
        android:layout_marginTop="@dimen/itemsMarginTop"
        android:layout_marginLeft="@dimen/itemsMargin"
        android:layout_below="@id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textSize"
        android:textColor="@color/textColor"
        android:textColorLink="@color/textColor"
        android:text="@string/website"
        android:autoLink="web"

        />
    <TextView
        android:id="@+id/address"
        android:layout_marginTop="@dimen/itemsMarginTop"
        android:layout_marginLeft="@dimen/itemsMargin"
        android:layout_below="@id/web"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textSize"
        android:textColor="@color/textColor"
        android:textColorLink="@color/textColor"
        android:text="@string/address"
        android:autoLink="map"

        />

</RelativeLayout>

